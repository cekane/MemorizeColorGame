<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ckane.colorflash">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/color_flash_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/color_flash_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/application_id" />
        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7779382289276327~6943048965"/>
        <activity
            android:name=".android.activity.levels.ChallengeMode"
            android:screenOrientation="portrait"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".android.activity.MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".android.activity.EndGame"
            android:screenOrientation="portrait"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".android.activity.HighScoreActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".android.activity.DifficultyPickerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".android.activity.PowerUpStore"
            android:screenOrientation="portrait"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".android.activity.HowToPlayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppFullScreenTheme"/>
        <activity android:name=".android.activity.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppFullScreenTheme"/>
    </application>

</manifest>